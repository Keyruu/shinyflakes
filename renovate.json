{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.nix$/"
      ],
      "matchStrings": [
        "image\\s*=\\s*\"(?<depName>[^:]+):(?<currentValue>[^@\"]+)(@(?<currentDigest>sha256:[a-f0-9]+))?\""
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.nix$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s*\\n\\s*\\w+\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ]
    }
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "/redis/",
        "/postgres/",
        "/valkey/",
        "/clickhouse/",
        "/meilisearch/",
        "/alpine-chrome/",
        "/pgvector"
      ]
    },
    {
      "description": "hotio images with release- prefix",
      "versioning": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(\\.(?<build>\\d+))?$",
      "matchPackageNames": [
        "/^ghcr\\.io/hotio//"
      ]
    },
    {
      "description": "Terraria with terraria- prefix",
      "matchPackageNames": [
        "docker.io/passivelemon/terraria-docker"
      ],
      "versioning": "regex:^terraria-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$"
    },
    {
      "description": "Hytale experimental prefix",
      "matchPackageNames": [
        "docker.io/deinfreu/hytale-server"
      ],
      "versioning": "regex:^experimental-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "description": "Calibre-web with V prefix",
      "matchPackageNames": [
        "crocodilestick/calibre-web-automated"
      ],
      "versioning": "regex:^V(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "description": "Scrutiny with v-prefix and -omnibus suffix",
      "matchPackageNames": [
        "ghcr.io/analogj/scrutiny"
      ],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-omnibus$"
    }
  ]
}
